{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "npx prisma migrate deploy && npm run build:css && remix build",
    "dev": "railway run remix dev & npm run watch:css",
    "postinstall": "remix setup node",
    "start": "remix-serve build",
    "watch:css": "npx tailwindcss -o app/styles/tailwind-build.css --watch",
    "build:css": "npx tailwindcss -o app/styles/tailwind-build.css --minify",
    "migrate:dev": "railway run npx prisma migrate dev"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.5",
    "@prisma/client": "^3.7.0",
    "@remix-run/react": "^1.1.1",
    "@remix-run/serve": "^1.1.1",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "framer-motion": "^5.5.5",
    "luxon": "^2.2.0",
    "markdown-it": "^12.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.1",
    "tailwindcss": "^3.0.8"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.1",
    "@types/luxon": "^2.0.8",
    "@types/markdown-it": "^12.2.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "prisma": "^3.7.0",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
